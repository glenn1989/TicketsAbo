@model IEnumerable<Tickets.ViewModel.ClubVM>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Ticketshop Pro League</h1>
    <p>Welkom bij de officiële ticket hub van de Jupiler Pro League.</p>


     <div class="card-deck">
        @foreach(var item in Model)
        {
         
            <div class="card box ">
                <img class="logo" src="~/Images/Logos/(@Html.DisplayFor(modelitem => item.Clubnaam)).png" alt="@item.Clubnaam">
                <div class="card-body">
                    <h5>@item.Clubnaam</h5>

                    @if(DateTime.Now.AddMonths(1) >= new DateTime(2022, 05, 01))
                    {
                        <a asp-controller="Abonnement" asp-action="Index" asp-route-id="@item.Stamnummer">Koop hier uw abonnement voor @item.Clubnaam</a>
                    } else
                    {
                        <span><a>Abonnementen niet meer beschikbaar</a></span>
                    }

                    
                </div>
            </div>

        }

    </div>


    </div>

